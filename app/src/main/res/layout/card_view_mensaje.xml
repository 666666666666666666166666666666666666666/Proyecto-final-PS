<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#00F1EAEA"
    app:cardCornerRadius="20dp"
    app:cardElevation="40dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#51FF5722"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fotoPerfilMensaje"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:srcCompat="@drawable/ic_stat_name" />

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="197dp"
                android:layout_height="49dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="17dp"
                android:layout_toStartOf="@+id/horaMensaje"
                android:layout_toEndOf="@+id/fotoPerfilMensaje"
                android:layout_toRightOf="@+id/iconImageView"
                android:orientation="vertical">

            <TextView
                android:id="@+id/nombreMensaje"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Integrantex"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

                <TextView
                    android:id="@+id/mensajeMensaje"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textColor="#292A2B"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mensajeFoto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/horaMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="6dp"
                android:text="00:00"
                android:textColor="#434140"
                android:textSize="10dp"
                android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>